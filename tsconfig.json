{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "es2017"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build/",
    "rootDir": "src/",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["build", "node_modules", "**/*.test.ts"]
}
